@model FGRoleEquipmentMD

@{
    var role = ViewBag.Role as FGGroupRoleEntity;
}

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="FGGroup" asp-action="Index">焰世代 - 群組管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="FGGroupRole" asp-action="Index" asp-route-groupId="@role.GroupId">角色管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="FGRoleEquipment" asp-action="Index" asp-route-roleId="@role.Id">裝備管理 - <span>@role.Name</span></a></li>
            <li class="breadcrumb-item active" aria-current="page">新增</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="FGRoleEquipment" asp-action="Create" method="post" autocomplete="off" enctype="multipart/form-data">
        <input asp-for="RoleId" value="@role.Id" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Intro"></label>
            <div class="col-10">
                <textarea class="form-control" asp-for="Intro" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="Intro"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="SlideResourceUrl"></label>
            <div class="col-10">
                <div class="input-group">
                    <input class="form-control" asp-for="SlideResourceUrl" readonly />
                    <div class="input-group-append">
                        <input class="d-none" asp-for="SlideResourceFile" accept=".jpg,.jpeg,.png,.svg,.gif" />
                        <label class="btn btn-primary" asp-for="SlideResourceFile"></label>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="SlideResourceUrl"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="MainResourceUrl"></label>
            <div class="col-10">
                <div class="input-group">
                    <input class="form-control" asp-for="MainResourceUrl" readonly />
                    <div class="input-group-append">
                        <input class="d-none" asp-for="MainResourceFile" accept=".jpg,.jpeg,.png,.svg,.gif" />
                        <label class="btn btn-primary" asp-for="MainResourceFile"></label>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="MainResourceUrl"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Sort"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Sort" />
                <span class="text-danger" asp-validation-for="Sort"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        initFileInput($('#SlideResourceFile'), $('#SlideResourceUrl'));
        initFileInput($('#MainResourceFile'), $('#MainResourceUrl'));
    </script>
}