@model IEnumerable<FGRoleEquipmentEntity>

@{
    var role = ViewBag.Role as FGGroupRoleEntity;
}

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="FGGroup" asp-action="Index">焰世代 - 群組管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="FGGroupRole" asp-action="Index" asp-route-groupId="@role.GroupId">角色管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">裝備管理 - <span>@role.Name</span></li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>排序</th>
                <th>名稱</th>
                <th>簡介</th>
                <th>輪播資源</th>
                <th>展示資源</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Sort))
            {
                <tr>
                    <td>@item.Sort</td>
                    <td>@item.Name</td>
                    <td>@item.Intro</td>
                    <td>@item.SlideResourceUrl</td>
                    <td>@item.MainResourceUrl</td>
                    <td>@item.UtcUpdateTime.AddHours(8).ToString("yyyy/MM/dd HH:mm:ss")</td>
                    <td>
                        <a class="icon-update" asp-controller="FGRoleEquipment" asp-action="Update" asp-route-id="@item.Id" title="編輯"></a>
                        <a class="icon-delete" asp-controller="FGRoleEquipment" asp-action="Delete" asp-route-id="@item.Id" title="刪除"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), '/FGRoleEquipment/Create?roleId={0}'.format(@role.Id));
    </script>
}