@model IssueMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Issue" asp-action="Index">追蹤議題管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">編輯</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="Issue" asp-action="Update" method="post" autocomplete="off">
        <input asp-for="Id" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" readonly />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Intro"></label>
            <div class="col-10">
                <textarea class="form-control" asp-for="Intro" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="Intro"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>