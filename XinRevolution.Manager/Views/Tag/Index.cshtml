@model IEnumerable<TagEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">標籤管理</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>名稱</th>
                <th>狀態</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td>@string.Format("{0}", item.Status ? "開啟" : "關閉")</td>
                <td>@item.UtcUpdateTime.AddHours(8).ToString("yyyy/MM/dd HH:mm:ss")</td>
                <td>
                    <a class="icon-update" asp-controller="Tag" asp-action="Update" asp-route-id="@item.Id" title="編輯"></a>
                    <a class="icon-delete" asp-controller="Tag" asp-action="Delete" asp-route-id="@item.Id" title="刪除"></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), '/Tag/Create');
    </script>
}
