@model IssueRelativeLinkMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="IssueRelativeLink" asp-action="Index" asp-route-issueId="@ViewBag.IssueId">相關連結管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">刪除</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="IssueRelativeLink" asp-action="Delete" method="post" autocomplete="off">
        <input asp-for="Id" />
        <input asp-for="IssueId" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="LinkUrl"></label>
            <div class="col-10">
                <input class="form-control" asp-for="LinkUrl" readonly />
                <span class="text-danger" asp-validation-for="LinkUrl"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="ResourceUrl"></label>
            <div class="col-10">
                <input class="form-control" asp-for="ResourceUrl" readonly />
                <span class="text-danger" asp-validation-for="ResourceUrl"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Note"></label>
            <div class="col-10">
                <textarea class="form-control" asp-for="Note" rows="10" readonly></textarea>
                <span class="text-danger" asp-validation-for="Note"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        initFileInput($('#ResourceFile'), $('#ResourceUrl'));
    </script>
}