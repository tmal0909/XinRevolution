@model UserMD

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>XinRevolution - Manager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/js/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/js/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <section class="login-background">
        <article class="login-frame">
            <div class="login-container">
                <img class="login-logo" src="~/image/logo/login-logo.svg" />

                <form class="login-form" asp-controller="Home" asp-action="Login" method="post" autocomplete="off">
                    <div>
                        <input asp-for="Account" />
                        <div>
                            <span class="text-danger" asp-validation-for="Account"></span>
                        </div>
                    </div>
                    <div>
                        <input asp-for="Password" />
                        <div>
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div>
                        <span class="text-danger">@ViewBag.ErrorMessage</span>
                    </div>
                    <div>
                        <button type="submit">送出</button>
                    </div>
                </form>
            </div>
        </article>
    </section>
</body>
</html>
