@model IEnumerable<FGViewCategoryEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">焰世代 - 世界觀分類管理</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>排序</th>
                <th>名稱</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Sort))
            {
                <tr>
                    <td>@item.Sort</td>
                    <td><a asp-controller="FGViewCategoryEvent" asp-action="Index" asp-route-categoryId="@item.Id" title="事件管理">@item.Name</a></td>
                    <td>@item.UtcUpdateTime.AddHours(8).ToString("yyyy/MM/dd HH:mm:ss")</td>
                    <td>
                        <a class="icon-update" asp-controller="FGViewCategory" asp-action="Update" asp-route-id="@item.Id" title="編輯"></a>
                        <a class="icon-delete" asp-controller="FGViewCategory" asp-action="Delete" asp-route-id="@item.Id" title="刪除"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), '/FGViewCategory/Create');
    </script>
}
