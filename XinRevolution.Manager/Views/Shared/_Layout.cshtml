<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>XinRevolution - Manager</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/js/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/util.js"></script>
    <script src="~/js/site.js"></script>

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <span>XinRevolution</span>
        <a class="float-right" asp-controller="Home" asp-action="Logout">登出</a>
    </header>

    <section class="main-frame">
        <aside>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="Index">使用者管理</a>
                </li>
                <li class="nav-item">
                    <div class="accordion" id="menu-accordion-blog">
                        <div class="accordion-head" id="menu-accordion-blog-head">
                            <a href="#" data-toggle="collapse" data-target="#menu-accordion-blog-content" aria-expanded="false" aria-controls="menu-accordion-blog-content">部落格管理</a>
                        </div>

                        <div class="collapse acoordion-content" id="menu-accordion-blog-content" aria-labelledby="menu-accordion-blog-head" data-parent="#menu-accordion-blog">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tag" asp-action="Index">標籤管理</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Blog" asp-action="Index">部落格管理</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
                <li class="nav-item">
                    <div class="accordion" id="menu-accordion-issue">
                        <div class="accordion-head" id="menu-accordion-issue-head">
                            <a href="#" data-toggle="collapse" data-target="#menu-accordion-issue-content" aria-expanded="false" aria-controls="menu-accordion-issue-content">議題管理</a>
                        </div>

                        <div class="collapse accordion-content" id="menu-accordion-issue-content" aria-labelledby="menu-accordion-issue-head" data-parent="#menu-accordion-issue">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Issue" asp-action="Index">議題管理</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="IssueItem" asp-action="Index">子議題管理</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="IssueRelativeLink" asp-action="Index">相關連結管理</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </aside>

        <artica>
            <div class="container-fluid">
                @RenderBody()
            </div>
        </artica>
    </section>

    <footer>&copy; Motivators 2019</footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
