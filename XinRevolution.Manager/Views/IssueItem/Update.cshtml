@model IssueItemMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Issue" asp-action="Index">議題管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="IssueItem" asp-action="Index" asp-route-issueId="@ViewBag.IssueId">子議題管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">編輯</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="IssueItem" asp-action="Update" method="post" autocomplete="off" enctype="multipart/form-data">
        <input asp-for="Id" />
        <input asp-for="IssueId" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Title"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="ReleaseDate"></label>
            <div class="col-10">
                <input class="form-control" asp-for="ReleaseDate" />
                <span class="text-danger" asp-validation-for="ReleaseDate"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="ResourceUrl"></label>
            <div class="col-10">
                <div class="input-group">
                    <input class="form-control" asp-for="ResourceUrl" readonly />
                    <div class="input-group-append">
                        <input class="d-none" asp-for="ResourceFile" accept=".jpg,.jpeg,.png,.svg,.gif" />
                        <label class="btn btn-primary" asp-for="ResourceFile"></label>
                    </div>
                </div>
                <span class="text-danger" asp-validation-for="ResourceUrl"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Content"></label>
            <div class="col-10">
                <textarea class="form-control" asp-for="Content" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="Content"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        initDatePicker($('#ReleaseDate'));
        initFileInput($('#ResourceFile'), $('#ResourceUrl'));
    </script>
}