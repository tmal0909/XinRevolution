@model FGGroupRoleMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="FGGroup" asp-action="Index">焰世代 - 群組管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="FGGroupRole" asp-action="Index" asp-route-groupId="@ViewBag.GroupId">角色管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">刪除</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="FGGroupRole" asp-action="Delete" method="post" autocomplete="off">
        <input asp-for="Id" />
        <input asp-for="GroupId" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Intro"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Intro" />
                <span class="text-danger" asp-validation-for="Intro"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="RelativeLinkUrl"></label>
            <div class="col-10">
                <textarea class="form-control" asp-for="RelativeLinkUrl" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="RelativeLinkUrl"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>