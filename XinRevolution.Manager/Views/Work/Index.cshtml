@model IEnumerable<WorkEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">作品管理</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>作品順序</th>
                <th>作品名稱</th>
                <th>資源連結</th>
                <th>作品簡介</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Sort))
            {
                <tr>
                    <td>@item.Sort</td>
                    <td>@item.Name</td>
                    <td>@item.ResourceUrl</td>
                    <td>@item.Intro</td>
                    <td>@item.UtcUpdateTime.ToLocalTime()</td>
                    <td>
                        <a class="icon-update" asp-controller="Work" asp-action="Update" asp-route-id="@item.Id" title="編輯"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'));
    </script>
}