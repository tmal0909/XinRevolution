@model BlogTagMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">部落格管理</a></li>
            <li class="breadcrumb-item"><a asp-controller="BlogTag" asp-action="Index" asp-route-blogId="@ViewBag.BlogId">部落格標籤設定</a></li>
            <li class="breadcrumb-item active" aria-current="page">新增</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="BlogTag" asp-action="Create" method="post" autocomplete="off">
        <input asp-for="BlogId" value="@ViewBag.BlogId" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="TagId"></label>
            <div class="col-10">
                <select class="form-control" asp-for="TagId" asp-items="Model.TagOptions"></select>
                <span class="text-danger" asp-validation-for="TagId"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>