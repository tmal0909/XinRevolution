@model IEnumerable<BlogTagEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Blog" asp-action="Index">部落格管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">部落格標籤設定</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>標籤</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Tag.Name</td>
                <td>@item.UtcUpdateTime.AddHours(8).ToString("yyyy/MM/dd HH:mm:ss")</td>
                <td>
                    <a class="icon-delete" asp-controller="BlogTag" asp-action="Delete" asp-route-id="@item.Id" title="刪除"></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), '/BlogTag/Create?blogId={0}'.format(@ViewBag.BlogId));
    </script>
}