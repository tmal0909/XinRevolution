@model IEnumerable<UserEntity>

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">使用者管理</li>
        </ol>
    </nav>
</div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>帳號</th>
                <th>姓名</th>
                <th>電話</th>
                <th>電郵</th>
                <th>地址</th>
                <th>更新時間</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Account</td>
                    <td>@item.Name</td>
                    <td>@item.Phone</td>
                    <td>@item.Mail</td>
                    <td>@item.Address</td>
                    <td>@item.UtcUpdateTime.ToLocalTime()</td>
                    <td>
                        <a class="icon-update" asp-controller="User" asp-action="Update" asp-route-id="@item.Id" title="編輯"></a>
                        <a class="icon-delete" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" title="刪除"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        initDataTable($('table'), '/User/Create');
    </script>
}