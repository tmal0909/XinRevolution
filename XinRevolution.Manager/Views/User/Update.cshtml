@model UserMD

<div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="User" asp-action="Index">使用者管理</a></li>
            <li class="breadcrumb-item active" aria-current="page">編輯</li>
        </ol>
    </nav>
</div>

<div>
    <form asp-controller="User" asp-action="Update" method="post" autocomplete="off">
        <input asp-for="Id" />

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Account"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Account" readonly/>
                <span class="text-danger" asp-validation-for="Account"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Password"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Password" value="@Model.Password"/>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Name"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Phone"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Phone" />
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Mail"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Mail" />
                <span class="text-danger" asp-validation-for="Mail"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label" asp-for="Address"></label>
            <div class="col-10">
                <input class="form-control" asp-for="Address" />
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        </div>

        <div class="form-group row justify-content-center">
            <button class="btn btn-primary" type="submit">送出</button>
        </div>
    </form>
</div>